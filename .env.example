# Next.js (App Router) environment variables.
#
# Copy to `.env.local` for local development:
#   cp .env.example .env.local
#
# Notes:
# - Variables without `NEXT_PUBLIC_` are server-only by default.
# - `next.config.ts` explicitly exposes `FIXLY_DISABLE_*` to the browser bundle
#   (via Next's `env` config), so treat them as non-secret feature flags.

# Required for Convex client + Convex Auth.
NEXT_PUBLIC_CONVEX_URL=

# Optional: used by `/api/ai`, `/api/chat`, `/api/tts`.
OPENAI_API_KEY=

# Optional: defaults to `gpt-5.2` in this repo; set to a valid model for your OpenAI account.
OPENAI_MODEL=

# Optional feature flags (set to `1` to enable).
# Disable streaming SSE responses from `/api/ai` and fall back to JSON.
FIXLY_DISABLE_STREAMING=

# Stripe (credits top-ups + plans).
STRIPE_KEY=
STRIPE_WEBHOOK_SECRET=
HOST_URL=
STRIPE_TOPUP_PRICE_ID=
# Optional JSON map of credit amount to Stripe price ID.
# Example: {"100":"price_123","200":"price_456"}
STRIPE_TOPUP_PRICE_IDS=
# Required for plan checkout mapping (JSON): {"starter":"price_...","plus":"price_...","pro":"price_..."}
STRIPE_PLAN_PRICE_IDS=
NEXT_PUBLIC_STRIPE_TOPUP_PRICE_ID=
# Optional JSON map of credit amount to Stripe price ID.
# Example: {"100":"price_123","200":"price_456"}
NEXT_PUBLIC_STRIPE_TOPUP_PRICE_IDS=

